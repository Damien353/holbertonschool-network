#!/usr/bin/env bash
# This script changes the IP resolution for localhost and facebook.com in /etc/hosts

# Vérifier que le script est exécuté en tant que root
if [ "$EUID" -ne 0 ]; then
  echo "Please run as root (sudo ./0-change_your_home_IP)"
  exit 1
fi

# Sauvegarder le fichier original
cp /etc/hosts /etc/hosts.bak

# Supprimer les lignes existantes pour localhost et facebook.com
sed -i '/localhost/d' /etc/hosts
sed -i '/facebook.com/d' /etc/hosts

# Ajouter les nouvelles résolutions
echo "127.0.0.2 localhost" >> /etc/hosts
echo "8.8.8.8 facebook.com" >> /etc/hosts
